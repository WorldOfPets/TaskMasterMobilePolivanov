<Page x:Class="TaskMasterMobilePolivanov.PageF.BiomaterialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskMasterMobilePolivanov.PageF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="530"
      Title="BiomaterialPage">

    <Grid
        Background="#FF76E383">
        <Border
            Margin="0 -10 0 0"
            Padding="10 10 10 10"
            BorderThickness="3"
            BorderBrush="#FF498C51"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            
        <StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Text="Дата: "
                    Style="{StaticResource TBlockClassic}"/>
                <DatePicker
                    Height="25"
                    Width="150"
                    Margin="5"
                    FontFamily="Comic Sans MS"/>
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Text="Код: "
                    Style="{StaticResource TBlockClassic}"/>
                <TextBox
                    Height="25"
                    Width="150"
                    Margin="5"
                    FontFamily="Comic Sans MS"/>
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Text="Пациент: "
                    Style="{StaticResource TBlockClassic}"/>
                <TextBox
                    Width="115"
                    Style="{StaticResource TBoxClassic}"/>
                <Button
                    Height="25"
                    Width="25"
                    Content="+"
                    Padding="0"
                    Style="{StaticResource BtnLaborantPStyle}"/>
            </StackPanel>
            <DataGrid
                    Height="200"
                    Name="DataGridUser"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    Width="240"
                    Margin="5"
                    FontFamily="Comic Sans MS">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Width="*" Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="Имя" Width="*" Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button
                Content="Принять биоматериал"
                Style="{StaticResource BtnLaborantPStyle}"/>
        </StackPanel>
        </Border>
    </Grid>
</Page>
